<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@mipmap/tv_station_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <com.base.widget.ImageView
        android:layout_width="233dp"
        android:layout_height="233dp"
        android:background="@drawable/tv_station_head_bg"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"/>
<com.base.widget.ImageView
    android:layout_width="225dp"
    android:layout_height="225dp"
    android:id="@+id/tv_station_iv"
    android:layout_gravity="center_horizontal"
    app:transform="circleTransform"
    android:layout_marginTop="104dp"
    android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="376dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/color13"
        android:textSize="@dimen/sp18"
        android:id="@+id/tv_station_name"/>
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="5dp"
        android:src="@mipmap/tv_station_play"
        android:id="@+id/tv_station_play"
        />
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="80dp"
        android:src="@mipmap/pause"
        android:id="@+id/tv_station_pause"
        />
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@mipmap/last"
        android:id="@+id/tv_station_last"
        android:layout_marginBottom="96dp"
        android:layout_marginRight="72dp"
        android:layout_gravity="bottom|center_horizontal"
        />
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@mipmap/next"
        android:id="@+id/tv_station_next"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginLeft="72dp"
        android:layout_marginBottom="96dp"/>

</FrameLayout>
