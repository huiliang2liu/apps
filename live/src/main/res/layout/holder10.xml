<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/holder10_fl"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/holder10_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="108dp"
            android:text="@string/next"
            android:textColor="@color/color2"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/holder10_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="130dp"
            android:text="@string/next"
            android:textColor="@color/color3"
            android:textSize="@dimen/sp14" />

        <com.base.widget.ImageView
            android:id="@+id/holder10_iv1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:roundRx="5dp"
            app:roundRy="5dp"
            app:transform="roundTransform" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/holder10_fl1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/holder10_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="108dp"
            android:text="@string/next"
            android:textColor="@color/color2"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/holder10_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="130dp"
            android:text="@string/next"
            android:textColor="@color/color3"
            android:textSize="@dimen/sp14" />

        <com.base.widget.ImageView
            android:id="@+id/holder10_iv2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:roundRx="5dp"
            app:roundRy="5dp"
            app:transform="roundTransform" />
    </FrameLayout>
</LinearLayout>
