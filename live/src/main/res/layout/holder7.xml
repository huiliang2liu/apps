<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="247dp">

    <com.base.widget.ImageView
        android:scaleType="fitXY"
        android:id="@+id/holder_short_video_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:roundRx="5dp"
        app:roundRy="5dp"
        app:transform="roundTransform" />
    <ImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@mipmap/play"
        android:layout_marginTop="78dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:textColor="@color/color12"
        android:id="@+id/holder_short_video_title"
        android:layout_marginRight="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="176dp"
        android:textSize="12sp"
        android:text="aaa"
        android:textColor="@color/color12"
        android:id="@+id/holder_short_video_time"
        android:layout_marginRight="11dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="210dp"
        android:textSize="14sp"
        android:textColor="@color/color3"
        android:id="@+id/holder_short_video_name"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="235dp"
        android:background="@color/color11"/>
</FrameLayout>
